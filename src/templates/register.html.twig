{# Appel du layout de la page #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

<div class="container text-center p-5 mb-2 my-5 {# bg-secondary text-white #}">
    
  <h3 >{{title}}</h3>       

  <h1>INSCRIPTION :</h1>        
  
  <div class="row justify-content-center">
    <div class="row col-8 my-5">
      
      <form method="POST" action="/blogMvc/register">        
        <input type="hidden" id="role" name="role" value="user">
        <div class="form-group">
          <label for="username" class="form-label required">Nom d'utilisateur</label>
          <input type="text" class="form-control" id="username" name="username" required="required" placeholder="Entrez votre nom utilisateur">
        </div>

        <div class="form-group mt-4">
          <label for="email" class="form-label required">Adresse email</label>
          <input type="email" class="form-control" id="email" name="email" required="required" placeholder="Entrez votre email">
        </div>

        <div class="col-12 mt-4">
          <label for="password" class="form-label required">Mot de passe</label>
          <input type="password" class="form-control" id="password" name="password" required="required" minlength="6" placeholder="Entrez votre mot de passe">
        </div>

        <div class="col-12 mt-4">
          <input type="submit" class="btn btn-primary w-40 px-4" value="S'inscrire">
        </div>
      </form>

    </div>
  </div>

</div>

{# </div> #}

{% endblock %}