{# Appel du layout de la page #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

<div class="container text-center p-3 mb-2 bg-secondary text-white">
    
  <h1 >{{title}}</h1>

  <div class="container">
        <div class={# "justify-content-center " #}>
            <h1>INSCRIPTION :</h1>
            <p>Lorem ipsum dolor sit.
            </p>
        </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="row col-8 gy-4" >
      
      <form method="POST" action="/blogMvc/register">
        <div class="form-group">
          <label for="lastname" class="form-label required">Nom d'utilisateur</label>
          <input type="text" class="form-control" id="lastname" name="lastname" required="required">
        </div>

        <div class="form-group">
          <label for="email" class="form-label required">Adresse email</label>
          <input type="email" class="form-control" id="email" name="email" required="required" placeholder="Entrez votre email">
        </div>
         
        <div class="col-12">
          <label for="password" class="form-label required">Mot de passe</label>
          <input type="password" class="form-control" id="password" name="password" required="required" minlength="6">
        </div>

        <div class="col-12 mt-4">
          <input type="submit" class="btn btn-primary w-40 px-4" value="S'inscrire">
        </div>
      </form>

    </div>
  </div>

</div>

{% endblock %}