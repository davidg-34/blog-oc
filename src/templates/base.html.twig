<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        {% endblock %}
    </head>

    <body>
    {# Barre de navigation #}
    <nav class="navbar navbar-expand-md bg-body-secondary border-bottom border-primary">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-primary" href="{{ ('/blogMvc/') }}">BLOG</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link " href="{{ ('/blogMvc/blog') }}">Articles </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="{{ ('/blogMvc/contact') }}">Contact </a>
            </li>  
              {% if userId %}
              <span class="p-2  text-primary">Bonjour <b>{{ userName }}</b>, vous êtes connecté(e) !</span>
              {% endif %}
          </ul>
              {% if not userId %}
                <a class="nav-link m-2" href="{{ ('/blogMvc/register') }}">
                  <button class="btn btn-outline-primary" type="submit"><i class="fas fa-user-edit"></i> Inscription</button>
                </a>
                <a class="nav-link m-2" href="{{ ('/blogMvc/login') }}">
                  <button class="btn btn-outline-primary" type="submit"><i class="fas fa-sign-in"></i> Connexion</button>
                </a>
              {% else %}
                <a href="{{ ('/blogMvc/logout') }}" <button type="button" class="btn btn-outline-primary"><i class="fa fa-sign-out" aria-hidden="true"></i> Deconnexion</button></a>
              {% endif %}
        </div>
      </div>
    </nav>

    <div class="container -md mt-3">
      {% block content %}

      {% endblock %}
    </div>

    <footer class="">
      <nav class="navbar navbar-expand-sm bg-body-secondary border-top border-primary">
        <div class="navbar-collapse justify-content-center" id="navbarsExampleDefault">
          <ul class="navbar-nav fw-bold me-auto-md text-center">
              <li class="nav-item">
                  <a class="nav-link" href="{{ ('/blogMvc/administration') }}"><i class="fas fa-tachometer-alt"></i> Administration </a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fab fa-twitter"></i> Twiter </a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fab fa-linkedin"></i></i> Linkedin </a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fab fa-github fa-lg"></i> Github </a>
              </li>
          </ul>
        </div>
      </nav>
    </footer>

    {% block javascript %}
    {# <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script> #}
    {% endblock %}

  </body>

</html>


