{# Appel du layout de la page #}
{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block content %}

{# Si l'utilisateur est connecté avec la variable de session, affiche le bouton 'Créer un nouvel article' #}
    {% if userId %} 
      <a href="/blogMvc/administration/" <button type="button" class="btn btn-warning {# operation #}"><i class="fas fa-pen"></i> Créer un  nouvel article</button></a>
    {% endif %}

<div class="container text-center p-3 mb-2">
    
  <h1>{{title}}</h1>

  <div class="container mb-5">
        <div>
            <h1>Liste des articles</h1>            
        </div>
  </div>
  
  <div class="row p-3 mb-2 bg-body-secondary rounded-2 justify-content-center">

    {# Affichage des articles #}
    {% for article in articles %}

    <div class="article card  mx-2 my-2 col-xs-6 col-sm-9 col-md-9 col-lg-4 col-xl-5 border border-primary">
      <div class="card-body">
        <h4 class="card-title">{{article.title}}</h4>
        <p class="card-text text-justify">{{ article.content|u.truncate(50, '...') }}</p>

        <p class="cart-text text-justify"><strong>Email :</strong> {{article.email}}
        <p class="cart-text text-justify"><strong>Auteur :</strong> {{article.username}}

        <p class="card-text text-justify"><span style="color: blue">Date publication : </span></br>{{ article.created|date("d m Y à H i s") }}</p>                
        <a href="/blogMvc/posts/{{article.id}}" class="btn btn-primary">Voir l'article</a>
      </div>
    </div>

    {% endfor %}
    
  </div>    
</div>    

{% endblock %}

{% block javascript %}  
<script></script>
{% endblock %}
